---
// Componente del menú de inicio
import { BUY, TWITTER, DEXSCREENER } from '../utils.ts';
---

<!-- Start Menu (hidden by default) -->
<div id="start-menu" class="hidden absolute bottom-12 left-0 w-64 bg-white border-2 border-black shadow-lg z-30">
  <div class="bg-gray-200 border-b-2 border-black p-2">
    <span class="text-black font-bold">GOAT-OS</span>
  </div>
  <div class="p-2 space-y-1">
    <a href="#" class="menu-item p-2 hover:bg-gray-100 cursor-pointer text-black border border-transparent hover:border-black block" onclick={`window.open('${BUY}', '_blank')`}>
      💰 Buy
    </a>
    <a href="#" class="menu-item p-2 hover:bg-gray-100 cursor-pointer text-black border border-transparent hover:border-black block" onclick={`window.open('${TWITTER}', '_blank')`}>
      🐦 X
    </a>
    <a href="#" class="menu-item p-2 hover:bg-gray-100 cursor-pointer text-black border border-transparent hover:border-black block" onclick={`window.open('${DEXSCREENER}', '_blank')`}>
      📊 Dexscreener
    </a>
    <div class="border-t border-gray-300 my-1"></div>
    <a href="#" class="menu-item p-2 hover:bg-gray-100 cursor-pointer text-black border border-transparent hover:border-black block" data-app="communication-hub">
      💬 Communication Hub
    </a>
  </div>
</div>