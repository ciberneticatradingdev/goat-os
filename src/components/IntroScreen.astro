---

<div id="intro-screen" class="min-h-screen bg-[url('/intro.jpeg')] bg-left bg-cover w-screen flex flex-col items-center justify-center bg-white pt-20 relative">
  <!-- Background overlay -->
  <div class="absolute inset-0 bg-black/30"></div>
  
  <img src="/goatos2.png" class="w-40 mb-16 breathing-logo relative z-10" alt="daos-svg" />
</div>

<style>
  @keyframes spin {
    0% { content: '|'; }
    25% { content: '/'; }
    50% { content: '-'; }
    75% { content: '\\'; }
    100% { content: '|'; }
  }

  .spinner-char {
    font-family: 'FSEX302', monospace;
    display: inline-block;
    animation: spin 0.5s infinite;
  }

  .spinner-char::before {
    content: '|';
    animation: spinContent 0.5s infinite;
  }

  @keyframes spinContent {
    0% { content: '|'; }
    25% { content: '/'; }
    50% { content: '-'; }
    75% { content: '\\'; }
    100% { content: '|'; }
  }

  .loading-spinner {
    animation: fadeOut 0.5s ease-in-out 3s forwards;
  }

  @keyframes fadeOut {
    from { opacity: 1; }
    to { opacity: 0; visibility: hidden; }
  }

  .title {
    font-family: 'FSEX302', monospace;
  }

  .subtitle {
    font-family: 'FSEX302', monospace;
  }

  /* Breathing animation for the logo */
  .breathing-logo {
    animation: breathe 3s ease-in-out infinite;
  }

  @keyframes breathe {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    #intro-screen img {
      width: 12rem !important; /* w-48 equivalent */
      margin-bottom: 2rem !important; /* mb-8 equivalent */
    }
    
    #intro-screen .title {
      font-size: 2.25rem !important; /* text-4xl equivalent */
    }
    
    #intro-screen .subtitle {
      font-size: 2.25rem !important; /* text-4xl equivalent */
    }
    
    #intro-screen .loading-spinner {
      font-size: 2.25rem !important; /* text-4xl equivalent */
    }
    
    #intro-screen .flex-col.flex-1 text {
      font-size: 1.125rem !important; /* text-lg equivalent */
    }
  }
</style>