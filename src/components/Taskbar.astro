---
// Componente de la barra de tareas
---

<!-- Taskbar -->
<div class="absolute bottom-0 left-0 right-0 h-12 bg-white border-t-2 border-black flex items-center px-2 z-20">
  <!-- Start Button -->
  <button id="start-button" class="bg-white border-2 border-black px-4 text-black font-bold hover:scale-105 transition-all">
    <img src="/trollface.png" alt="start" class="w-8 h-8">
  </button>
  
  <!-- Separator -->
  <div class="w-px h-8 bg-black mx-2 hidden md:block"></div>
  
  <!-- Open Applications -->
  <div id="taskbar-apps" class="flex-1 flex gap-1 hidden md:flex"></div>
  
  <!-- Mobile Spacer -->
  <div class="flex-1 md:hidden"></div>
  
  <!-- Contract Address -->
  <div class="bg-white border-2 border-black px-3 py-1 cursor-pointer hover:scale-105 transition-all" 
       onclick="copyContractAddress()" 
       title="Click to copy contract address">
    <span id="taskbar-contract-full" class="text-black text-xs font-mono hidden md:inline"></span>
    <span id="taskbar-contract-short" class="text-black text-xs font-mono md:hidden"></span>
  </div>
</div>